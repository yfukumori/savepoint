<h2>Sign in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.input :email, class: "form-control", placeholder: "Enter email", required: false, autofocus: true,  input_html: { class: 'form-input' } %>
  </div>
  <div class="form-group">
    <%= f.input :password, class: "form-control", placeholder: "Password", required: false,  input_html: { class: 'form-input1' } %>
  </div>
  <div class="checkbox">
    <label>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </label>
  </div>
  <%= f.button :submit, "Sign in", class: "btn btn-default" %>
<% end %>


<%= render "devise/shared/links" %>